@model IEnumerable<PB1CSTADS2207.Models.Automovel>

@{
    ViewBag.Title = "Lista de Automoveis";
}

<h2>Lista de Automoveis</h2>

<p>
    @Html.ActionLink("Adicionar novo Automovel", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disponivel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Disponivel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCadastro)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AutomovelId }) |
            @Html.ActionLink("Detailhes", "Details", new { id=item.AutomovelId }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.AutomovelId })
        </td>
    </tr>
}

</table>
